#include <stdint.h>
#include <stm32f407xx.h>

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

void SoftwareDelay(uint32_t tick)
{
	for (uint32_t i = 0; i <= tick; i++);
}

int main(void)
{
	GPIO_Handle_t port;

	port.pGPIOx = GPIOD;

	GPIO_Config(&port, GPIO_PIN_NO_12, GPIO_MODE_OUT, GPIO_SPEED_FAST, GPIO_OP_TYPE_PP, GPIO_NO_PUPD, 0);
	GPIO_Config(&port, GPIO_PIN_NO_13, GPIO_MODE_OUT, GPIO_SPEED_FAST, GPIO_OP_TYPE_PP, GPIO_NO_PUPD, 0);
	GPIO_Config(&port, GPIO_PIN_NO_14, GPIO_MODE_OUT, GPIO_SPEED_FAST, GPIO_OP_TYPE_PP, GPIO_NO_PUPD, 0);
	GPIO_Config(&port, GPIO_PIN_NO_15, GPIO_MODE_OUT, GPIO_SPEED_FAST, GPIO_OP_TYPE_PP, GPIO_NO_PUPD, 0);


	GPIO_PeriClockControl(GPIOD, ENABLE);
	GPIO_Init(&port);

    /* Loop forever */
	while(1)
	{
		GPIO_ToggleOutputPin(GPIOD, GPIO_PIN_NO_12);
		SoftwareDelay(500000);
	}
}
