#include <stm32f407xx.h>

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

void SoftwareDelay(uint32_t tick)
{
	for (uint32_t i = 0; i <= tick; i++);
}

int main(void)
{
	GPIO_Handle_t LD3;
	GPIO_Handle_t LD4;
	GPIO_Handle_t LD5;
	GPIO_Handle_t LD6;


	LD3.pGPIOx = GPIOD;
	LD4.pGPIOx = GPIOD;
	LD5.pGPIOx = GPIOD;
	LD6.pGPIOx = GPIOD;

	GPIO_Config(&LD3, GPIO_PIN_NO_12, GPIO_MODE_OUT, GPIO_SPEED_FAST, GPIO_OP_TYPE_PP, GPIO_NO_PUPD, 0);
	GPIO_Config(&LD4, GPIO_PIN_NO_13, GPIO_MODE_OUT, GPIO_SPEED_FAST, GPIO_OP_TYPE_PP, GPIO_NO_PUPD, 0);
	GPIO_Config(&LD5, GPIO_PIN_NO_14, GPIO_MODE_OUT, GPIO_SPEED_FAST, GPIO_OP_TYPE_PP, GPIO_NO_PUPD, 0);
	GPIO_Config(&LD6, GPIO_PIN_NO_15, GPIO_MODE_OUT, GPIO_SPEED_FAST, GPIO_OP_TYPE_PP, GPIO_NO_PUPD, 0);


	GPIO_PeriClockControl(GPIOD, ENABLE);
	GPIO_Init(&LD3);
	GPIO_Init(&LD4);
	GPIO_Init(&LD5);
	GPIO_Init(&LD6);


    /* Loop forever */
	while(1)
	{
		GPIO_ToggleOutputPin(LD3.pGPIOx, LD3.GPIO_PinConfig.GPIO_PinNumber);
		SoftwareDelay(500000);
		GPIO_ToggleOutputPin(LD4.pGPIOx, LD4.GPIO_PinConfig.GPIO_PinNumber);
		SoftwareDelay(500000);
		GPIO_ToggleOutputPin(LD5.pGPIOx, LD5.GPIO_PinConfig.GPIO_PinNumber);
		SoftwareDelay(500000);
		GPIO_ToggleOutputPin(LD6.pGPIOx, LD6.GPIO_PinConfig.GPIO_PinNumber);
		SoftwareDelay(500000);
	}
}
